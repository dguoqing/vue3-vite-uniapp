{
    "easycom": {
        // 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
        "custom": {
            "^u-(.*)": "uview-plus/components/u-$1/u-$1.vue"
        }
    },
    "pages": [
        //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/main/home/index",
            "style": {
                "navigationBarTitleText": "开卓首页",
                "navigationStyle": "custom"
            }
        },
        {
            "path": "pages/main/goods/index",
            "style": {
                "navigationBarTitleText": "商城"
            }
        },
        {
            "path": "pages/main/discover/index",
            "style": {
                "navigationBarTitleText": "发现"
            }
        },
        {
            "path": "pages/main/user/index",
            "style": {
                "navigationBarTitleText": "我的"
            }
        },
        {
            "path": "pages/other/index",
            "style": {
                "navigationBarTitleText": "其他页面"
            }
        }
    ],
    "subPackages": [
        {
            "root": "pages/index/",
            "pages": [
                {
                    "path": "test/index",
                    "style": { "navigationBarTitleText": "其他页面" }
                }
            ]
        },
        {
            "root": "pages/goods/",
            "pages": [
                {
                    "path": "test/index",
                    "style": { "navigationBarTitleText": "其他页面" }
                }
            ]
        },
        {
            "root": "pages/discover/",
            "pages": [
                {
                    "path": "test/index",
                    "style": { "navigationBarTitleText": "其他页面" }
                }
            ]
        },
        {
            "root": "pages/user/",
            "pages": [
                {
                    "path": "test/index",
                    "style": { "navigationBarTitleText": "其他页面" }
                }
            ]
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    },
    "tabBar": {
        "color": "#1AA86C",
        "selectedColor": "#1AA86C",
        "borderStyle": "white",
        "backgroundColor": "#ffffff",
        "list": [
            {
                "pagePath": "pages/main/home/index",
                "iconPath": "static/images/footer-bar-index-icon.png",
                "selectedIconPath": "static/images/footer-bar-index-icon-on.png",
                "text": "首页"
            },
            {
                "pagePath": "pages/main/goods/index",
                "iconPath": "static/images/footer-bar-goods-icon.png",
                "selectedIconPath": "static/images/footer-bar-goods-icon-on.png",
                "text": "商城"
            },
            {
                "pagePath": "pages/main/discover/index",
                "iconPath": "static/images/footer-bar-discover-icon.png",
                "selectedIconPath": "static/images/footer-bar-discover-icon-on.png",
                "text": "发现"
            },
            {
                "pagePath": "pages/main/user/index",
                "iconPath": "static/images/footer-bar-user-icon.png",
                "selectedIconPath": "static/images/footer-bar-user-icon-on.png",
                "text": "我的"
            }
        ]
    }
}
